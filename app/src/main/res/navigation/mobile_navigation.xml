<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_capture">

    <fragment
        android:id="@+id/navigation_capture"
        android:name="com.nullpointerexception.cityeye.ui.fragments.CaptureFragment"
        android:label="@string/map"
        tools:layout="@layout/fragment_capture">
        <action
            android:id="@+id/action_navigation_capture_to_navigation_list"
            app:destination="@id/navigation_list"
            app:popUpTo="@+id/navigation_capture"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_capture_to_placesFragment"
            app:destination="@id/navigation_places"
            app:popUpTo="@+id/navigation_capture"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_list"
        android:name="com.nullpointerexception.cityeye.ui.fragments.ListFragment"
        android:label="@string/reports"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_navigation_list_to_navigation_capture"
            app:destination="@id/navigation_capture"
            app:popUpTo="@+id/navigation_capture"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_list_to_placesFragment"
            app:destination="@id/navigation_places"
            app:popUpTo="@+id/navigation_capture"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_places"
        android:name="com.nullpointerexception.cityeye.ui.fragments.PlacesFragment"
        android:label="fragment_places"
        tools:layout="@layout/fragment_places">
        <action
            android:id="@+id/action_placesFragment_to_navigation_capture"
            app:destination="@id/navigation_capture"
            app:popUpTo="@+id/navigation_capture"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_placesFragment_to_navigation_list"
            app:destination="@id/navigation_list"
            app:popUpTo="@+id/navigation_capture"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>